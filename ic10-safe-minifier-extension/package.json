{
  "name": "ic10-safe-minifier",
  "displayName": "IC10 Safe Minifier",
  "description": "Safely minifies Stationeers IC10 code: removes indentation/blank lines, replaces aliases/defines, collapses spaces, preserves HASH(...) directives.",
  "version": "0.0.1",
  "publisher": "FlorpyDorp",
  "engines": { "vscode": "^1.85.0" },
  "categories": ["Other"],
  "keywords": ["IC10", "Stationeers", "minify", "assembly", "tools"],
  "icon": "images/icon.png",
  "main": "extension.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/FlorpyDorp/ic10-safe-minifier"
  },
  "bugs": {
    "url": "https://github.com/FlorpyDorp/ic10-safe-minifier/issues"
  },
  "homepage": "https://github.com/FlorpyDorp/ic10-safe-minifier#readme",
  "contributes": {
    "commands": [
      { "command": "ic10SafeMinifier.minify", "title": "IC10: Safe Minify current file" },
      { "command": "ic10SafeMinifier.preview", "title": "IC10: Preview Minified (no save)" }
    ],
    "keybindings": [
      { "command": "ic10SafeMinifier.minify", "key": "ctrl+alt+m", "when": "editorTextFocus && resourceExtname == .ic10" },
      { "command": "ic10SafeMinifier.preview", "key": "ctrl+alt+p", "when": "editorTextFocus && resourceExtname == .ic10" }
    ],
    "configuration": {
      "type": "object",
      "title": "IC10 Safe Minifier",
      "properties": {
        "ic10SafeMinifier.stripComments": {
          "type": "boolean",
          "default": true,
          "description": "Strip full-line and inline comments (# ...) outside quotes, while preserving HASH(...) directive lines."
        }
      }
    }
  }
}
